<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            android:paddingTop="20dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/attribution_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/license_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/attribution_name"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/license_type"/>

        <View android:id="@+id/divider"
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:background="@color/colorAccentDark"
              android:layout_marginTop="24dp"
              android:layout_marginStart="6dp"
              android:layout_marginEnd="6dp"
              app:layout_constraintTop_toBottomOf="@+id/license"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>